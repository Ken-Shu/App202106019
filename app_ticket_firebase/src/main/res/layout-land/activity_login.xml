<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

<LinearLayout
    android:layout_marginLeft="20dp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/ticket"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/et_username"
        android:layout_width="250dp"
        android:layout_height="250dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_username"
            android:hint="@string/username_hint_txt"
            android:layout_marginTop="60dp"
            android:textSize="30dp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />
        <Button
            android:id="@+id/bt_order_login"
            android:text="@string/order_login_txt"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_below="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/bt_console_login"
            android:text="@string/console_login_txt"
            android:textSize="30dp"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_below="@+id/bt_order_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    </LinearLayout>


</RelativeLayout>